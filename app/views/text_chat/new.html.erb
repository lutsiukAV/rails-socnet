<h1>Send message</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(:action => :send_msg) do %>
        <input type="hidden" name="sender" value="<%= current_user.id %>">
        <input type="hidden" name="receiver" value="<%= @receiver_id %>">
        <label>
          Message:
          <textarea name="text"></textarea>
        </label>
        <input type="submit" value="OK" class="btn btn-lg btn-primary"/>
    <% end %>
  </div>
</div>
