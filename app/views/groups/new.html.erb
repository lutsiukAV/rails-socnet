<% provide(:title, 'Create group') %>
<h1>Create group</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@group) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.label :status %>
        <%= f.select :status, [['Open', 1], ['Closed', 0]] %>
        <%= f.submit "Create my group", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>